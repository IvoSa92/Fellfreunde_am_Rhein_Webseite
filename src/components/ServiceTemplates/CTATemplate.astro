---
import { Image } from 'astro:assets';

interface Props {
  title?: string;
  description?: string;
  image: ImageMetadata;
  imageAlt?: string;
  sectionId?: string;
}

// Astro's ImageMetadata type
type ImageMetadata = import('astro').ImageMetadata;

const { title = '', description = '', image, imageAlt = '', sectionId = 'cta' } = Astro.props;
---

<section id={sectionId} class="px-4 pb-32">
  <div
    class="bg-base-200 mx-auto flex w-full max-w-screen-xl flex-col items-center justify-center rounded-2xl p-10 md:flex-row"
  >
    <div class="flex flex-col items-start justify-center text-left">
      <h2 class="pb-8 text-2xl font-bold" data-animate="fade-up">{title}</h2>
      <p class="text-base-content/80 max-w-md pb-8" data-animate="fade-up" data-delay="100">
        {description}
      </p>
      <div
        class="flex w-full flex-col items-center gap-4 md:flex-row"
        data-animate="fade-up"
        data-delay="200"
      >
        <a href="/kontakt" class="btn btn-primary">Termin vereinbaren</a>
        <a href="tel:061112345678" class="btn btn-outline">Direkt Anrufen</a>
      </div>
    </div>
    <Image
      src={image}
      alt={imageAlt}
      format="webp"
      width="500"
      height="500"
      class="w-1/2 max-w-xs pt-12 md:w-1/3"
      data-animate="slide-right"
      data-delay="300"
    />
  </div>
</section>
