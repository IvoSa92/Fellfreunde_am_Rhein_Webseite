---
import { Image } from 'astro:assets';
import logo from '../../assets/images/fellnasen_logo.png';
import notfallIcon from '../../assets/images/notfall.svg?raw';
---

<div
  class="navbar bg-base-200 data-[shrink=true]:bg-base-200/80 fixed top-0 z-20 py-3 shadow-sm transition-all duration-300 data-[shrink=true]:py-1"
  data-shrink="false"
  id="navbar"
>
  <div class="navbar-start">
    <div class="dropdown dropdown-hover">
      <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h8m-8 6h16"
          >
          </path>
        </svg>
      </div>
      <ul
        tabindex="0"
        class="menu menu-sm dropdown-content bg-base-100 rounded-box z-1 mt-3 w-52 p-2 shadow"
      >
        <li><a href="/">Home</a></li>
        <li><a href="/ueber_uns">Über uns</a></li>
        <li>
          <a>Leistungen</a>
          <ul class="p-2">
            <li><a href="/allgemeinmedizin">Allgemeinmedizin</a></li>
            <li><a href="/chirurgie_zahnmedizin">Chirurgie & Zahnmedizin</a></li>
            <li><a>Diagnostik & Labor</a></li>
            <li><a>Ernährungs- & Seniorenberatung</a></li>
            <li><a>Notfall- & Intensivversorgung</a></li>
            <li><a>Physiotherapie & Reha</a></li>
          </ul>
        </li>
        <li><a>Kontakt</a></li>
      </ul>
    </div>

    <a class="btn btn-ghost gap-2 p-6 text-lg font-extrabold lg:text-2xl">
      <Image
        src={logo}
        format="webp"
        alt="Fellnasen Logo"
        width={logo.width}
        height={logo.height}
        class="h-10 w-auto pr-2"
      />
      Fellfreunde
    </a>
  </div>
  <div class="navbar-center hidden lg:flex">
    <ul class="menu menu-horizontal gap-6 px-1 text-lg font-extrabold">
      <li class="hover:text-warning"><a href="/">Home</a></li>
      <li class="hover:text-warning"><a href="/ueber_uns">Über uns</a></li>
      <li class="relative">
        <div class="dropdown dropdown-hover dropdown-center">
          <div tabindex="0" role="button" class="hover:text-warning m-0 px-0">Leistungen</div>
          <ul
            tabindex="0"
            class="dropdown-content menu bg-base-100 rounded-box z-10 mt-2 w-64 p-2 shadow"
          >
            <li><a class="hover:text-warning" href="/allgemeinmedizin">Allgemeinmedizin</a></li>
            <li>
              <a class="hover:text-warning" href="/chirurgie_zahnmedizin">
                Chirurgie &amp; Zahnmedizin
              </a>
            </li>
            <li><a class="hover:text-warning">Diagnostik &amp; Labor</a></li>
            <li><a class="hover:text-warning">Ernährungs- &amp; Seniorenberatung</a></li>
            <li><a class="hover:text-warning">Notfall- &amp; Intensivversorgung</a></li>
            <li><a class="hover:text-warning">Physiotherapie &amp; Reha</a></li>
          </ul>
        </div>
      </li>
      <li class="hover:text-warning"><a>Kontakt</a></li>
    </ul>
  </div>
  <div class="navbar-end pr-4">
    <a
      class="btn btn-warning text-error text-md gap-2 font-bold text-white/90 transition hover:text-white lg:text-lg"
    >
      <span
        set:html={notfallIcon}
        class="hidden h-5 w-5 md:inline [&>svg]:h-5 [&>svg]:w-5 [&>svg]:shrink-0 [&>svg]:translate-y-[1px] [&>svg]:fill-current"
      />
      Notfall
    </a>
  </div>
</div>
