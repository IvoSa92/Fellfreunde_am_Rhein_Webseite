import hero from '../../../assets/images/chirurgie-hero.png';
import zaehne from '../../../assets/images/zaehne.png';
---

<HeroTemplate
  h1Text="Chirurgie & Zahnmedizin mit Expertise und Fürsorge"
  paragraphText="Unsere Chirurgie & Zahnmedizin umfasst Routineeingriffe bis zu komplexen Operationen. Wir sorgen mit modernster Technik, schonenden Methoden und professioneller Zahnpflege für die bestmögliche Behandlung Ihres Tieres. Chirurgie und Zahnmedizin werden bei uns mit höchster Expertise und Fürsorge durchgeführt. Ihre Fellnase ist bei uns in sicheren Händen."
  buttonText="Beratungstermin vereinbaren"
  buttonLink="/kontakt"
  imageSrc={hero}
  imageAlt="Tierarzt bei einer chirurgischen Behandlung"
  decorativeImage={zaehne}
  decorativeImageAlt="Zähne unterhalten sich"
  showWaves={true}
  sectionId="chirurgie-zahnmedizin-hero"
  heroImageWidth={600}
  heroImageHeight={900}
  decorativeImageWidth={800}
  decorativeImageHeight={200}
/>
