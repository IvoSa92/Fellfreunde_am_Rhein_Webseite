---
interface Props {
  /**
   * Google Maps Embed URL
   * Diese URL kannst du von Google Maps kopieren:
   * 1. Gehe zu Google Maps
   * 2. Suche nach deinem Standort
   * 3. Klicke auf "Teilen" -> "Karte einbetten"
   * 4. Kopiere den src-Wert des iframe-Codes
   *
   * Beispiel: "https://www.google.com/maps/embed?pb=..."
   */
  embedUrl?: string;
  /**
   * HÃ¶he der Karte (Standard: 450px)
   */
  height?: string;
}

const {
  embedUrl = 'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2721.3557844686256!2d8.597883122440727!3d47.650350683761545!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x479078933c8444b1%3A0xb2fe102038beb532!2sRheinauer%20Str.%2022%2C%2079798%20Jestetten!5e1!3m2!1sde!2sde!4v1762186190066!5m2!1sde!2sde',
  height = '450px',
} = Astro.props as Props;
---

{
  embedUrl && (
    <section class="mx-auto w-full max-w-screen-xl px-6 py-8">
      <div class="overflow-hidden rounded-2xl shadow-lg">
        <iframe
          width="100%"
          height={height}
          style="border:0;"
          loading="lazy"
          allowfullscreen
          referrerpolicy="no-referrer-when-downgrade"
          src={embedUrl}
          title="Standort Karte - Fellfreunde am Rhein"
          class="w-full"
        />
      </div>
    </section>
  )
}
