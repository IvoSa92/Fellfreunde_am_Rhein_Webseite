---
import '../assets/styles/global.css';
import { ClientRouter } from 'astro:transitions';
import { fade, slide } from 'astro:transitions';
import Navbar from '../components/default/Navbar.astro';
import Footer from '../components/default/Footer.astro';
import StructuredData from '../components/StructuredData.astro';

interface Props {
  title?: string;
  description?: string;
  lang?: string;
  includeNavbar?: boolean;
  includeFooter?: boolean;
  ogImage?: string;
}

const {
  title = 'Fellfreunde am Rhein – Moderne Tierarztpraxis',
  description = 'Moderne Diagnostik und liebevolle Betreuung für Hund & Katze am Rhein.',
  lang = 'de',
  includeNavbar = true,
  includeFooter = true,
  ogImage = '/fellnasen_logo.png',
} = Astro.props as Props;

// Canonical URL - nur wenn site konfiguriert ist
const canonicalURL = Astro.site ? new URL(Astro.url.pathname, Astro.site).href : Astro.url.pathname;

// Open Graph Image - absolute URL wenn möglich, sonst relative
const ogImageURL = Astro.site ? new URL(ogImage, Astro.site).href : ogImage;
---

<html lang={lang} data-theme="Fellnasen" class="w-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:locale" content="de_DE" />
    <meta property="og:site_name" content="Fellfreunde am Rhein" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImageURL} />

    <!-- Favicons -->
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32" />

    <!-- Preconnect for external services -->
    <link rel="preconnect" href="https://app.cal.com" />
    <link rel="dns-prefetch" href="https://app.cal.com" />

    <!-- Font Preload -->
    <link
      rel="preload"
      href="/fonts/Pally-Variable.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- Structured Data für SEO -->
    <StructuredData />

    <slot name="head" />
  </head>
  <body class="w-full overflow-x-hidden">
    <ClientRouter />
    {includeNavbar && <Navbar />}
    <main class="w-full">
      <slot />
    </main>
    {includeFooter && <Footer />}
    <script is:inline>
      const SHRINK_OFFSET = 80;

      const setupNavbarShrink = () => {
        const navbar = document.querySelector('#navbar');
        if (!navbar) return;

        const handler = () => {
          const shouldShrink = window.scrollY > SHRINK_OFFSET;
          navbar.setAttribute('data-shrink', shouldShrink ? 'true' : 'false');
        };

        // Clean old listener if present
        if (navbar.__shrinkListener) {
          window.removeEventListener('scroll', navbar.__shrinkListener);
        }

        navbar.__shrinkListener = handler;
        window.addEventListener('scroll', handler, { passive: true });
        handler();
      };

      document.addEventListener('astro:page-load', setupNavbarShrink);
      document.addEventListener('astro:after-swap', setupNavbarShrink);
      setupNavbarShrink();
    </script>
  </body>
</html>
