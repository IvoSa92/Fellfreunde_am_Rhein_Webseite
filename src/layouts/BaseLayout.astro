---
import '../assets/styles/global.css';
import { ClientRouter } from 'astro:transitions';
import { fade, slide } from 'astro:transitions';
import Navbar from '../components/default/Navbar.astro';
import Footer from '../components/default/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  lang?: string;
  includeNavbar?: boolean;
  includeFooter?: boolean;
}

const {
  title = 'Fellfreunde am Rhein – Moderne Tierarztpraxis',
  description = 'Moderne Diagnostik und liebevolle Betreuung für Hund & Katze am Rhein.',
  lang = 'de',
  includeNavbar = true,
  includeFooter = true,
} = Astro.props as Props;
---

<html lang={lang} data-theme="Fellnasen" class="w-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32" />
    <slot name="head" />
  </head>
  <body class="w-full overflow-x-hidden">
    <ClientRouter />
    {includeNavbar && <Navbar />}
    <main class="w-full">
      <slot />
    </main>
    {includeFooter && <Footer />}
    <script>
      const SHRINK_OFFSET = 80;

      const setupNavbarShrink = () => {
        const navbar = document.querySelector('#navbar');
        if (!navbar) return;

        const handler = () => {
          const shouldShrink = window.scrollY > SHRINK_OFFSET;
          navbar.setAttribute('data-shrink', shouldShrink ? 'true' : 'false');
        };

        // Clean old listener if present
        if (navbar.__shrinkListener) {
          window.removeEventListener('scroll', navbar.__shrinkListener);
        }

        navbar.__shrinkListener = handler;
        window.addEventListener('scroll', handler, { passive: true });
        handler();
      };

      document.addEventListener('astro:page-load', setupNavbarShrink);
      document.addEventListener('astro:after-swap', setupNavbarShrink);
      setupNavbarShrink();
    </script>
  </body>
</html>
